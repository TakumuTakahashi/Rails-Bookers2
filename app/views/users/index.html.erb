<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>
<p>プロフィール画像</p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    <tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    <tr>
  </tbody>
</table>
<%= link_to "編集", edit_user_path(@user) %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>
<% end %>

<h2>Users</h2>
<table>
  <thead>
    <tr> 
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>プロフィール画像</td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      <tr>
    <% end %>
  </tbody>
</table>
