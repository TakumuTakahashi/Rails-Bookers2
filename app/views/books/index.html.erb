<%= render 'share/share', book: @book, user: @user %>

<div class="col-xs-9">
  <h2>Books</h2>
  <table class="table table-striped">
    <thead>
      <tr> 
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>プロフィール画像</td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        <tr>
      <% end %>
    </tbody>
  </table>
</div>