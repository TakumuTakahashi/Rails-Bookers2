<%= render 'share/share', book: @book, user: @user %>

<div class="col-xs-9">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
        <tr>
          <td>
            <%= link_to user_path(@detail_book.user) do %>
              <%= attachment_image_tag @detail_book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "attachment user profile_image fallback" , fallback: "no_image.jpg", size: '40x40' %><br>
              <%= @detail_book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @detail_book.title, book_path(@detail_book) %></td>
          <td><%= @detail_book.body %></td>
        <% if current_user.id == @detail_book.user_id %>
          <td><%= link_to "Edit", edit_book_path(@detail_book) %></td>
          <td><%= link_to "Destroy", book_path(@detail_book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
        <tr>
    </tbody>
  </table>
</div>