<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>
<p>プロフィール画像</p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    <tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    <tr>
  </tbody>
</table>
<%= link_to "編集", edit_user_path(@user) %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>
<% end %>

<h2>Book detail</h2>
<table>
  <tbody>
      <tr>
        <td>
        プロフィール画像<br>
        <%= link_to @detail_book.user.name, user_path(@detail_book.user) %>
        </td>
        <td><%= link_to @detail_book.title, book_path(@detail_book) %></td>
        <td><%= @detail_book.body %></td>
      <% if current_user.id == @detail_book.user_id %>
        <td><%= link_to "Edit", edit_book_path(@detail_book) %></td>
        <td><%= link_to "Destroy", book_path(@detail_book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      <% end %>
      <tr>
  </tbody>
</table>
