<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container clearfix">
        <nav class="nav navbar-nav navbar-left" >
          <span class="header-logo">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="nav-list">
                <%= link_to " Home", user_path(current_user.id), class: "header-link glyphicon glyphicon-home" %>
              </li>
              <li class="nav-list">
                <%= link_to " Users", users_path, class: "header-link  glyphicon glyphicon-user" %>
              </li>
              <li class="nav-list">
                <%= link_to " Books", books_path, class: "header-link glyphicon glyphicon-book" %>
              </li>
              <li class="nav-list">
                <%= link_to " logout", destroy_user_session_path, method: :delete, class: "header-link glyphicon glyphicon-log-out" %>
              </li>
            <% else %>
              <li class="nav-list">
                <%= link_to " Home", root_path, class: "header-link glyphicon glyphicon-home" %>
              </li>
              <li class="nav-list">
                <%= link_to " About", home_about_path, class: "header-link glyphicon glyphicon-link" %>
              </li>
              <li class="nav-list">
                <%= link_to " sign up", new_user_registration_path, class: "header-link glyphicon glyphicon-edit" %>
              </li>
              <li class="nav-list">
                <%= link_to " login", new_user_session_path, class: "header-link glyphicon glyphicon-log-in" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <div class="body">
      <div class="container">
        <div class="row">
          <%= yield %>
        </div>
      </div>
    </div>

    <footer>
      <div class='container'>
        <div class='row'>
          <div class='col-xs-3 col-xs-offset-9'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
